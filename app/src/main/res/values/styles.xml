<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- remove black screen at start -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color</item>
        <item name="colorAccent">@color/app_primary_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Dark icons in the android notification bar-->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <!-- navigation bar colors -->
        <item name="android:windowTranslucentNavigation" tools:targetApi="19">false</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/nice_translucent_darkest_grey</item>
        <!-- switch compat theme-->
        <item name="colorControlActivated">@color/app_accent_text</item>
        <item name="colorSwitchThumbNormal">@color/app_primary_text</item>
        <item name="android:colorForeground">@color/app_primary_text</item>
    </style>

    <!-- TEXTS -->

    <style name="text" parent="">
        <item name="android:textColor">@color/app_primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="homescreen_text" parent="text">
        <item name="android:textSize">@dimen/badass_text_body_big</item>
    </style>

    <style name="homescreen_big_text" parent="text">
        <item name="android:textSize">@dimen/badass_text_title</item>
    </style>


    <style name="widget_text" parent="text">
        <item name="android:textSize">@dimen/badass_text_body</item>
    </style>

    <style name="widget_tiny_text" parent="widget_text">
        <item name="android:textSize">@dimen/badass_text_body_micro</item>
    </style>

    <style name="notification_text" parent="widget_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/app_notification_text</item>
    </style>

    <style name="notification_tiny_text" parent="widget_tiny_text">
        <item name="android:textColor">@color/app_notification_text</item>
    </style>


    <!-- BUTTONS -->

    <style name="classicButton" parent="text">
        <item name="android:background">@color/selector_button_background</item>
        <item name="android:textSize">@dimen/badass_text_body_bigger</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/little_layout_padding</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>
